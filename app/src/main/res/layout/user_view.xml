<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mssv"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                tools:text="000001" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/mssv"
                android:textColor="@color/colorPrimary"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="nguyen huu tinh" />

            <TextView
                android:id="@+id/gioitinh"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:textColor="@color/colorPrimary"
                android:gravity="center_vertical"
                android:layout_below="@id/mssv"
                android:paddingLeft="10dp"
                android:textSize="16sp"
                tools:text="nguyen huu tinh"
                android:layout_alignParentLeft="true" />
            <TextView
                android:id="@+id/soDT"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/colorPrimary"
                android:gravity="center_vertical"
                android:layout_toRightOf="@id/gioitinh"
                android:layout_below="@id/mssv"
                android:paddingLeft="10dp"
                android:textSize="16sp"
                tools:text="nguyen huu tinh"
                 />
            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/colorPrimary"
                android:gravity="center_vertical"
                android:layout_toRightOf="@id/phongban"
                android:layout_below="@id/gioitinh"
                android:paddingLeft="10dp"
                android:textSize="16sp"
                tools:text="nguyen huu tinh"
                 />
            <TextView
                android:id="@+id/phongban"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/colorPrimary"
                android:gravity="center_vertical"
                android:layout_alignParentStart="true"
                android:layout_below="@id/gioitinh"
                android:paddingLeft="10dp"
                android:textSize="16sp"
                tools:text="nguyen huu tinh"
                android:layout_alignParentLeft="true" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>